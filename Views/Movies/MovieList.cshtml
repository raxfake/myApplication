@model List<WebApplication1.Models.Movie>

@{
    ViewBag.Title = "Movie List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>
<div>
    @Html.ActionLink("Add Movie", "MoviesForm", "Movies", new { @class = "btn btn-primary" })
</div>
<br/>
@if (@Model == null)
{
    <h4>We dont have movies.</h4>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie Name</th>
            <th>Genre</th>
        </tr>
      
        </thead>
        <tbody>
       
            @foreach (var movie in @Model)
            {
                <tr>
                    <td>@Html.ActionLink(@movie.Name, "Edit", new {id = @movie.Id})</td>
                    <td>@movie.Genre.Name</td>
                </tr>
               
            }
       
        </tbody>
    </table>
   
}

