@model WebApplication1.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<li>Genre: @Model.Genre.Name</li>
<li>Release Date: @Model.ReleaseDate.ToString("D")</li>
<li>Added Date: @Model.DateAdded.ToString("F")</li>
<li>Number in stock: @Model.NumberInStock</li>

